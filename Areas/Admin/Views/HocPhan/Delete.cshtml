@model mentor.Models.tblHocPhan
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Xóa thông tin học phần </h2>
    </div>
    <div class="form-row">
        <div class="form-group col=md-6">
            <label asp-for="MaHocPhan">Mã học phần</label>
            <input type="text" class="form-control mb-3" asp-for="MaHocPhan" disabled />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="TenHocPhan">TenHocPhan</label>
            <input type="text" class="form-control mb-3" asp-for="TenHocPhan" disabled />
        </div>
    </div>
    <!-- Begin Form --->
    <form asp-action="Delete" method="Post">
        <input type="hidden" asp-for="MaHocPhan" />
        <a class="btn btn-lg btn-warning p-2 mr-5" href="javascript:history.back()">
            <i class="bi bi-arrow-left-circle"></i> Quay lại 
        </a>
        <button type="submit" class="btn btn-lg btn-danger p-2">
            <i class="bi bi-trash"></i> Xóa thông tin
        </button>
    </form>
    <!-- End From -->
</main>