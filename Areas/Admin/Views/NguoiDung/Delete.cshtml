@model mentor.Models.tblNguoiDung
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Xóa thông tin người dùng</h2>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="TenTaiKhoan">Tên tài khoản</label>
            <input type="text" class="form-control mb-3" asp-for="TenTaiKhoan" disabled style="width: 100%;" />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Email">Email</label>
            <input type="text" class="form-control mb-3" asp-for="Email" disabled style="width: 100%;" />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="SoDienThoai">Số điện thoại</label>
            <input type="text" class="form-control mb-3" asp-for="SoDienThoai" disabled style="width: 100%;" />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="VaiTro">Vai trò</label>
            <input type="text" class="form-control mb-3" asp-for="VaiTro" disabled style="width: 100%;" />
        </div>
    </div>
    <!-- Begin Form --->
    <form asp-action="Delete" method="Post">
        <input type="hidden" asp-for="MaNguoiDung" />
        <a class="btn btn-lg btn-warning p-2 mr-5" href="javascript:history.back()">
            <i class="bi bi-arrow-left-circle"></i> Quay lại
        </a>
        <button type="submit" class="btn btn-lg btn-danger p-2">
            <i class="bi bi-trash"></i> Xóa thông tin
        </button>
    </form>
    <!-- End From -->
</main>