@model mentor.Models.tblNguoiDung

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h2>Chỉnh sửa người dùng</h2>
    </div>
    <div class="container shadow p-5">
        <form method="post" asp-action="Edit" asp-route-id="@Model.MaNguoiDung">
            <div class="form-row">
                <input type="hidden" asp-for="MaNguoiDung" />
                <!-- Tên tài khoản -->
                <div class="form-group col-md-6 mb-3">
                    <label asp-for="TenTaiKhoan">Tên tài khoản</label>
                    <input type="text" class="form-control" asp-for="TenTaiKhoan" placeholder="Nhập tên tài khoản..." />
                    <span asp-validation-for="TenTaiKhoan" class="alert-danger"></span>
                </div>

                <!-- Email -->
                <div class="form-group col-md-6 mb-3">
                    <label asp-for="Email">Email</label>
                    <input type="email" class="form-control" asp-for="Email" placeholder="Nhập email..." />
                    <span asp-validation-for="Email" class="alert-danger"></span>
                </div>

                <!-- Mật khẩu -->
                <div class="form-group col-md-6 mb-3">
                    <label asp-for="MatKhau">Mật khẩu</label>
                    <input type="password" class="form-control" asp-for="MatKhau" placeholder="Nhập mật khẩu mới (nếu cần thay đổi)..." />
                    <span asp-validation-for="MatKhau" class="alert-danger"></span>
                </div>

                <!-- Số điện thoại -->
                <div class="form-group col-md-6 mb-3">
                    <label asp-for="SoDienThoai">Số điện thoại</label>
                    <input type="text" class="form-control" asp-for="SoDienThoai" placeholder="Nhập số điện thoại..." />
                    <span asp-validation-for="SoDienThoai" class="alert-danger"></span>
                </div>

                <!-- Vai trò -->
                <div class="form-group col-md-6 mb-3">
                    <label for="VaiTro" class="form-label">Vai trò</label>
                    <select asp-for="VaiTro" asp-items="ViewBag.RolesList" class="form-select" id="roleDropdown">
                    </select>
                    <span asp-validation-for="VaiTro" class="text-danger"></span>
                </div>
                @* <div class="form-group col-md-6 mb-3">
                    <label for="VaiTro" class="form-label">Vai trò</label>
                    <select asp-for="VaiTro" asp-items="ViewBag.RolesList" class="form-select" id="roleDropdown">
                    </select>
                    <span asp-validation-for="VaiTro" class="text-danger"></span>
                </div> *@


                <!-- Trạng thái -->
                <div class="form-group col-md-6 mb-3">
                    <label asp-for="TrangThai">Trạng thái</label>
                    <select class="form-control" asp-for="TrangThai">
                        <option value="true" selected="@(Model.TrangThai == true)">Hoạt động</option>
                        <option value="false" selected="@(Model.TrangThai == false)">Không hoạt động</option>
                    </select>
                    <span asp-validation-for="TrangThai" class="alert-danger"></span>
                </div>
                <!-- Ngày tạo -->
                <div class="form-group col-md-6 mb-3">
                    <label asp-for="NgayTao">Ngày tạo</label>
                    <input type="date" class="form-control" asp-for="NgayTao" />
                    <span asp-validation-for="NgayTao" class="text-danger"></span>
                </div>
            </div>

            <a asp-controller="NguoiDung" asp-action="Index" class="btn btn-lg btn-warning p-2">
                <i class="bi bi-arrow-left-circle"></i> Quay lại
            </a>
            <button type="submit" class="btn btn-lg btn-primary p-2">
                <i class="bi bi-file-plus-fill"></i> Lưu thay đổi
            </button>
        </form>
    </div>
</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
